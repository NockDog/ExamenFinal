@model SistemaGestionConstructora.Models.Asignacion
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Asignación</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="IDEmpleado" class="control-label"></label>
        <select asp-for="IDEmpleado" class="form-control" asp-items="ViewBag.IDEmpleado"></select>
        <span asp-validation-for="IDEmpleado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IDProyecto" class="control-label"></label>
        <select asp-for="IDProyecto" class="form-control" asp-items="ViewBag.IDProyecto"></select>
        <span asp-validation-for="IDProyecto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaAsignacion" class="control-label"></label>
        <input asp-for="FechaAsignacion" class="form-control" />
        <span asp-validation-for="FechaAsignacion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

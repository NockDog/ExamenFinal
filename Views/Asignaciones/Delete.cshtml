@model SistemaGestionConstructora.Models.Asignacion
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Eliminar Asignación</h2>

<h3>¿Está seguro que desea eliminar esta asignación?</h3>
<div>
    <h4>Asignación</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Empleado.NombreCompleto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empleado.NombreCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Proyecto.NombreDescriptivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proyecto.NombreDescriptivo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaAsignacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaAsignacion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IDAsignacion" />
        <button type="submit" class="btn btn-danger">Eliminar</button> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>

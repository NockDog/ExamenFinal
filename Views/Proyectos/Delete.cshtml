@model SistemaGestionConstructora.Models.Proyecto

<h2>Eliminar Proyecto</h2>

<h3>¿Está seguro que desea eliminar este proyecto?</h3>
<div>
    <h4>Proyecto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreDescriptivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreDescriptivo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFinalizacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFinalizacion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IDProyecto" />
        <button type="submit" class="btn btn-danger">Eliminar</button> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>

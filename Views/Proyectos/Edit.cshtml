@model SistemaGestionConstructora.Models.Proyecto

<h2>Editar Proyecto</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="NombreDescriptivo" class="control-label"></label>
        <input asp-for="NombreDescriptivo" class="form-control" />
        <span asp-validation-for="NombreDescriptivo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaInicio" class="control-label"></label>
        <input asp-for="FechaInicio" class="form-control" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaFinalizacion" class="control-label"></label>
        <input asp-for="FechaFinalizacion" class="form-control" />
        <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
